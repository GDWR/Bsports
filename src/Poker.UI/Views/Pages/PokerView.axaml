<UserControl
    x:Class="Poker.UI.Views.Pages.PokerView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:controls="clr-namespace:Poker.UI.Controls"
    xmlns:behaviors="clr-namespace:Poker.UI.Behaviors"
    xmlns:pages="clr-namespace:Poker.UI.ViewModels.Pages"
    xmlns:generic="clr-namespace:System.Collections.Generic;assembly=System.Collections"
    mc:Ignorable="d"
    x:DataType="pages:PokerViewModel"
    x:CompileBindings="True"
    d:DesignWidth="700"
    d:DesignHeight="400">
    <Design.DataContext>
        <!-- ReSharper disable once Xaml.ConstructorWarning -->
        <pages:PokerViewModel />
    </Design.DataContext>
    <Panel>
        <Viewbox Margin="0,0,0,30" ClipToBounds="False" Stretch="Uniform">
            <behaviors:CardFieldBehavior.CardStacks>
                <generic:List x:TypeArguments="controls:CardStackPlacementControl" />
            </behaviors:CardFieldBehavior.CardStacks>
            <Grid ColumnDefinitions="*,*,*,*,*,*" RowDefinitions="*,100,*">
   
                <controls:CardStackPlacementControl Name="Deck" Classes="StackMarker"
                                                    TargetCanvas="{Binding #PlayingField}"
                                                    Grid.Row="0" Grid.Column="0"
                                                    SourceItems="{Binding Deck}"
                                                    Orientation="Horizontal" FaceDownOffset="0" FaceUpOffset="0" />

                <!-- Community Cards -->
                <controls:CardStackPlacementControl Name="Cell1" Classes="StackMarker"
                                                    TargetCanvas="{Binding #PlayingField}"
                                                    Grid.Row="0" Grid.Column="1"
                                                    SourceItems="{Binding Cell1}"
                                                    Orientation="Horizontal" FaceDownOffset="0" FaceUpOffset="0" />
                <controls:CardStackPlacementControl Name="Cell2" Classes="StackMarker"
                                                    TargetCanvas="{Binding #PlayingField}"
                                                    Grid.Row="0" Grid.Column="2"
                                                    SourceItems="{Binding Cell2}"
                                                    Orientation="Horizontal" FaceDownOffset="0" FaceUpOffset="0" />
                <controls:CardStackPlacementControl Name="Cell3" Classes="StackMarker"
                                                    TargetCanvas="{Binding #PlayingField}"
                                                    Grid.Row="0" Grid.Column="3"
                                                    SourceItems="{Binding Cell3}"
                                                    Orientation="Horizontal" FaceDownOffset="0" FaceUpOffset="0" />
                <controls:CardStackPlacementControl Name="Cell4" Classes="StackMarker"
                                                    TargetCanvas="{Binding #PlayingField}"
                                                    Grid.Row="0" Grid.Column="4"
                                                    SourceItems="{Binding Cell4}"
                                                    Orientation="Horizontal" FaceDownOffset="0" FaceUpOffset="0" />
                <controls:CardStackPlacementControl Name="Cell5" Classes="StackMarker"
                                                    TargetCanvas="{Binding #PlayingField}"
                                                    Grid.Row="0" Grid.Column="5"
                                                    SourceItems="{Binding Cell5}"
                                                    Orientation="Horizontal" FaceDownOffset="0" FaceUpOffset="0" />
                
                <!-- Hands -->
                <controls:CardStackPlacementControl Name="Hand1" Classes="StackMarker"
                                                    TargetCanvas="{Binding #PlayingField}"
                                                    Grid.Row="2" Grid.Column="1"
                                                    SourceItems="{Binding Hand1}"
                                                    Orientation="Horizontal" FaceDownOffset="33" FaceUpOffset="33" />
                <controls:CardStackPlacementControl Name="Hand2" Classes="StackMarker"
                                                    TargetCanvas="{Binding #PlayingField}"
                                                    Grid.Row="2" Grid.Column="2"
                                                    SourceItems="{Binding Hand2}"
                                                    Orientation="Horizontal" FaceDownOffset="33" FaceUpOffset="33" />
                <controls:CardStackPlacementControl Name="Hand3" Classes="StackMarker"
                                                    TargetCanvas="{Binding #PlayingField}"
                                                    Grid.Row="2" Grid.Column="3"
                                                    SourceItems="{Binding Hand3}"
                                                    Orientation="Horizontal" FaceDownOffset="33" FaceUpOffset="33" />
                <controls:CardStackPlacementControl Name="Hand4" Classes="StackMarker"
                                                    TargetCanvas="{Binding #PlayingField}"
                                                    Grid.Row="2" Grid.Column="4"
                                                    SourceItems="{Binding Hand4}"
                                                    Orientation="Horizontal" FaceDownOffset="33" FaceUpOffset="33" />
                <controls:CardStackPlacementControl Name="Hand5" Classes="StackMarker"
                                                    TargetCanvas="{Binding #PlayingField}"
                                                    Grid.Row="2" Grid.Column="5"
                                                    SourceItems="{Binding Hand5}"
                                                    Orientation="Horizontal" FaceDownOffset="33" FaceUpOffset="33" />

                <Canvas x:Name="PlayingField"
                        Grid.ColumnSpan="5"
                        Grid.Column="0"
                        Grid.Row="0"
                        Grid.RowSpan="3">
                    <Interaction.Behaviors>
                        <behaviors:CardFieldBehavior />
                    </Interaction.Behaviors>
                </Canvas>
            </Grid>
        </Viewbox>
        <controls:DeckControls VerticalAlignment="Bottom" />
        <controls:WinDialog IsVisible="{Binding IsGameWon}" />
    </Panel>

</UserControl>